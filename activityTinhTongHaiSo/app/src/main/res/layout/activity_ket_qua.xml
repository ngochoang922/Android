<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="center"
    android:background="#F5F5F5">

    <!-- Tiêu đề -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Hiển Thị Kết Quả"
        android:textSize="32sp"
        android:textColor="#000000"
        android:background="#E69090"
        android:gravity="center"
        android:layout_marginBottom="24dp" />

    <TextView
        android:id="@+id/Sothu1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Số Thứ 1: "
        android:textSize="24sp"
        android:background="#7CE2E1"
        android:textColor="#000000"
        android:layout_marginBottom="16dp" />

    <TextView
        android:id="@+id/Sothu2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Số Thứ 2: "
        android:background="#87F0BD"
        android:textSize="24sp"
        android:textColor="#000000"
        android:layout_marginBottom="16dp" />

    <TextView
        android:id="@+id/tvKetQua"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:text="Kết quả: "
        android:background="#FFFFFF"
        android:textColor="#E20D62" />
</LinearLayout>